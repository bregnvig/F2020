{
  "database": {
    "rules": "apps/cloud/database.rules.json"
  },
  "firestore": {
    "rules": "apps/cloud/firestore.rules",
    "indexes": "apps/cloud/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/cloud/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/cloud/storage.rules"
  },
  "functions": {
    "codebase": "cloud",
    "predeploy": ["npx nx build cloud"],
    "runtime": "nodejs16",
    "source": "dist/apps/cloud"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "ui": {
      "enabled": true
    }
  }
}
